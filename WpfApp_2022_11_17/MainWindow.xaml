<Window x:Class="WpfApp_2022_11_17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_2022_11_17"
        mc:Ignorable="d"
        Background="AliceBlue"
        FontSize="20"
        Title="MainWindow" Height="450" Width="400">
     <!-- Layout Element Grid/StackPanel-->
    <StackPanel Orientation="Vertical">
        <TextBlock Foreground="Blue" Margin="20" HorizontalAlignment="Center">Hello WPF</TextBlock>
        
        <StackPanel Orientation="Horizontal" Margin="10 0 0  10">
            <TextBlock Text="First Name: "/>
            <TextBox x:Name="txtName" MinWidth="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 0 0  10">
            <TextBlock Text="Last Name: "/>
            <TextBox x:Name="txtlName" MinWidth="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 0 0  10">
            <Button Click="Button_Click">
                <TextBlock Text="Login" Margin="5"/>
            </Button> 
        </StackPanel>


    </StackPanel>
</Window>
